#cloud-config

---
users:
  - name: "centos"
    lock_passwd: true
    gecos: "Cloud User"
    groups: [ wheel, adm, systemd-journal ]
    sudo: "ALL=(ALL) NOPASSWD:ALL"
    shell: "/bin/bash"
write_files:
  - path: "/etc/profile.d/docker-alias.sh"
    permissions: "0644"
    owner: "root"
    content: alias docker="sudo /usr/bin/docker"
packages:
  - chrony
  - etcd
  - docker
runcmd:
  - "mkdir -m 700 /home/centos/.ssh"
  - "touch /home/centos/.ssh/authorized_keys"
  - "chown -R centos:centos /home/centos/.ssh"
  - "cat /home/vagrant/.ssh/authorized_keys > /home/centos/.ssh/authorized_keys"
  - "sed -i \"s~OPTIONS='--selinux-enabled'~OPTIONS='--selinux-enabled=false -H unix:///var/run/docker.sock -H tcp://0.0.0.0:2375'~g\" /etc/sysconfig/docker"
  - "sed -i '/STORAGE_DRIVER=.*$/ { $!N; d; }' /etc/sysconfig/docker-storage-setup"
  - "echo 'STORAGE_DRIVER=overlay' >> /etc/sysconfig/docker-storage-setup"
  - [ timedatectl, set-timezone, UTC ]
  - [ timedatectl, set-ntp, false ]
  - [ timedatectl, set-ntp, true ]
  - [ systemctl, enable, -f, etcd.service ]
  - [ systemctl, start, --no-block, etcd.service ]
  - [ systemctl, enable, -f, docker.service ]
  - [ systemctl, start, --no-block, docker.service ]
