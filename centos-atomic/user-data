#cloud-config

---
timezone: "UTC"
users:
  - name: "centos"
    lock_passwd: true
    gecos: "Cloud User"
    groups: [ wheel, adm, systemd-journal ]
    sudo: "ALL=(ALL) NOPASSWD:ALL"
    ssh-authorized-keys:
      - "ssh-rsa  vagrant insecure public key"
    shell: "/bin/bash"
write_files:
  - path: "/etc/profile.d/docker-alias.sh"
    permissions: "0644"
    owner: "root"
    content: |
      alias docker="sudo /usr/bin/docker-latest"
  - path: "/etc/profile.d/docker-compose-alias.sh"
    permissions: "0644"
    owner: "root"
    content: |
      alias docker-compose='touch ${PWD}/.env; \
      sudo /usr/bin/docker-latest run \
      --privileged \
      --rm \
      --env-file ${PWD}/.env \
      --volume ${PWD}:/tmp/$(basename ${PWD}) \
      --volume /var/run/docker.sock:/var/run/docker.sock \
      --workdir /tmp/$(basename ${PWD}) \
      docker/compose:1.11.2'
runcmd:
  - [ sed, -i, '/DOCKERBINARY=\/usr\/bin\/docker-latest/s~^#~~g', /etc/sysconfig/docker ]
  - [ sed, -i, "s~OPTIONS='--selinux-enabled --log-driver=journald'~OPTIONS='--selinux-enabled=false --log-driver=journald -H unix:///var/run/docker.sock -H tcp://0.0.0.0:2375'~g", /etc/sysconfig/docker ]
  - [ sed, -i, '/DOCKER_STORAGE_OPTIONS=.*$/ { $!N; d; }', /etc/sysconfig/docker-storage ]
  - [ /bin/bash, -c, "echo 'DOCKER_STORAGE_OPTIONS=\"--storage-driver overlay\"' >> /etc/sysconfig/docker-storage" ]
  - [ systemctl, disable, --force, --now, --no-block, docker.service ]
  - [ systemctl, enable, --force, --now, --no-block, docker-latest.service ]
  - [ systemctl, mask, --no-block, docker.service ]
  - [ systemctl, enable, --force, --now, --no-block, etcd.service ]
  - [ timedatectl, set-ntp, false ]
  - [ timedatectl, set-ntp, true ]
